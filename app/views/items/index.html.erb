<h1>Roommate Totals</h1>
<h2>Dana: <%= Item.where(roommate_id: 5).sum(:price) %></h2>
<h2>Patrick: <%= Item.where(roommate_id: 8).sum(:price) %></h2>
<h2>Mike: <%= Item.where(roommate_id: 6).sum(:price) %></h2>
<h2>Joe: <%= Item.where(roommate_id: 7).sum(:price) %></h2>

<h1>List Of Items</h1>


<table>
  <thead>
    <tr>
      <th>Item</th>
      <th>Price</th>
      <th>Roommate</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.price %></td>
        <td><%= Mate.find(item.roommate_id).name %></td>
        <td><%= link_to 'Show', item %></td>
        <td><%= link_to 'Edit', edit_item_path(item) %></td>
        <td><%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

